    <div class="colorlib-product">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
                    <h2>View All Products</h2>
                </div>
            </div>
            <div class="row row-pb-md">
                <!-- prodcut start -->
                <% for(var i = 0; i < product.results.length; i++) { %>
                <div class="col-md-3 col-lg-3 mb-4 text-center">
                    <div class="product-entry border">
                        <a href="/productDetails/<%= product.results[i]._id%>" class="prod-img">
                            <img src="/images/<%= product.results[i].imageUrl[0] %>" class="img-fluid" alt="Free html5 bootstrap 4 template">
                        </a>
                        <div class="desc">
                            <h2><a href="#"><%= product.results[i].name%></a></h2>
                            <span class="price">â‚¹<%= product.results[i].price%> </span>
                        </div>
                    </div>
                </div>
                <% } %>
                
                <!-- product end -->
            </div>

            <!-- pagination -->
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="block-27">
                   <ul>
                    <% if (product.previous) { %>
                        <li><a href="/men?page=<%= product.previous.page%>&limit=<%= product.previous.limit%> "><i class="ion-ios-arrow-back"></i></a></li>
                    <% } %>
                    <li class="active"><span><%= product.currunt.page%></span></li>
                      
                      <% if (product.next) { %>
                        <li><a href="/men?page=<%= product.next.page%>&limit=<%= product.next.limit%>"><i class="ion-ios-arrow-forward"></i></a></li>

                    <% } %>
                   </ul>
                </div>
                </div>
            </div>
            <!-- pagination end -->
        </div>
    </div>

